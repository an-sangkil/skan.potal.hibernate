<!--?xml version="1.0" encoding="UTF-8"? -->  
<!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="home/*" extends="user.base.layout">
        <put-attribute name="body" value="/WEB-INF/jsp/views/{1}.jsp" />
    </definition>

    <definition name="user/*/*" extends="user.base.layout">
        <put-attribute name="body" value="/WEB-INF/jsp/views/user/{1}/{2}.jsp" />
    </definition>
    
    <definition name="about/*" extends="user.base.layout">
        <put-attribute name="body" value="/WEB-INF/jsp/views/about/{1}.jsp" />
    </definition>
    
    <definition name="support/*" extends="user.base.layout">
        <put-attribute name="body" value="/WEB-INF/jsp/views/support/{1}.jsp" />
    </definition>
</tiles-definitions>